<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_fav"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#f0f8ff"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="event_name"
            android:id="@+id/event_nameTxt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#1874cd"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="notification description"
            android:id="@+id/notification_descriptionTxt"
            android:layout_alignParentBottom="false"
            android:layout_alignLeft="@+id/event_nameTxt"
            android:layout_alignStart="@+id/event_nameTxt"
            android:layout_below="@+id/event_nameTxt"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textColor="#474747" />

    </RelativeLayout>

</RelativeLayout>