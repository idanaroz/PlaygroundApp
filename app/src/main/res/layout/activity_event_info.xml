<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.inc.playground.playground.EventInfo" >


    <ScrollView
        android:id="@+id/scroll"
        android:fillViewport="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableLayout"
        android:layout_below="@+id/rl_infodialog">

        <RelativeLayout
            android:id="@+id/rel_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:longClickable="false"
            android:nestedScrollingEnabled="false"
            android:transitionGroup="true">

            <RelativeLayout
                android:id="@+id/rel_address"
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="dateEvent"
                    android:id="@+id/EventDateInfo"
                    android:layout_marginTop="101dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="startTime"
                    android:id="@+id/EventStartTimeInfo"
                    android:layout_marginLeft="26dp"
                    android:layout_marginStart="26dp"
                    android:layout_alignTop="@+id/EventDateInfo"
                    android:layout_toRightOf="@+id/EventDateInfo"
                    android:layout_toEndOf="@+id/EventDateInfo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="to:"
                    android:id="@+id/toTxt"
                    android:layout_marginLeft="27dp"
                    android:layout_marginStart="27dp"
                    android:layout_alignTop="@+id/EventStartTimeInfo"
                    android:layout_toRightOf="@+id/EventStartTimeInfo"
                    android:layout_toEndOf="@+id/EventStartTimeInfo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="endTime"
                    android:id="@+id/EventEndTimeInfo"
                    android:layout_alignTop="@+id/toTxt"
                    android:layout_toRightOf="@+id/toTxt"
                    android:layout_toEndOf="@+id/toTxt"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_above="@+id/EventStartTimeInfo"
                    android:background="@drawable/playground6"
                    android:id="@+id/EventTypeImage"></LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Location"
                    android:id="@+id/EventLocationInfo"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_map"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_below="@+id/rel_address"
                android:layout_marginTop="20dp">

                <fragment
                    android:id="@+id/mapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    class="com.google.android.gms.maps.SupportMapFragment" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ll_map">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Group Size:"
                    android:id="@+id/GroupSizeTxt"
                    android:layout_marginLeft="106dp"
                    android:layout_marginStart="106dp"
                    android:layout_marginTop="37dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="size"
                    android:id="@+id/EventSizeInfo"
                    android:layout_alignBottom="@+id/GroupSizeTxt"
                    android:layout_toRightOf="@+id/GroupSizeTxt"
                    android:layout_toEndOf="@+id/GroupSizeTxt"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Event Description"
                    android:id="@+id/EventDescriptionInfo"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="EventStatus"
                    android:id="@+id/EventStatusTxt"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/EventSizeInfo"
                    android:layout_toStartOf="@+id/EventSizeInfo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="State"
                    android:id="@+id/EventStatusInfo"
                    android:layout_alignTop="@+id/EventStatusTxt"
                    android:layout_alignLeft="@+id/EventSizeInfo"
                    android:layout_alignStart="@+id/EventSizeInfo" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:stretchColumns="0,1,2,3,4,5" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/ll_aboutus"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_video"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/teliphone_btn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_instruction"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_map"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/distance_btn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_more"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:gravity="bottom|center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/share_btn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rate"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:gravity="bottom|center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_book"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/mail_btn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rates"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:gravity="bottom|center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_web"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/website_btn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rate1"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:gravity="bottom|center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_review"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rate_btn" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:id="@+id/rl_infodialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>

</RelativeLayout>